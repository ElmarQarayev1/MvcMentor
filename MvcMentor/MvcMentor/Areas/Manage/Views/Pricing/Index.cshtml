@model List<Card>
@{
    int order = 0;
}
<div class="container-fluid">
    <div class="col-md-12">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Pricing</h1>
            <a asp-action="create" class="d-none d-sm-inline-block btn btn-primary shadow-sm">
                Create Pricing
            </a>
        </div>
        <div class="row">

            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Button</th>
                            <th scope="col">ButtonUrl</th>
                            <th scope="col">Isfeature</th>
                            <th scope="col">IsAdvance</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@(++order)</th>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Button</td>
                                <td>@item.ButtonUrl</td>
                                <td>@item.IsFeature</td>
                                <td>@item.IsAdvance</td>
                                <td>
                                    <a class="btn btn-warning" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-danger delete-btn" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
     
            </div>
        </div>
    </div>
</div>
